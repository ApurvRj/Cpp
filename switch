#include <iostream>
using namespace std;
int main() {
  int a, b;
  cout<<"enter value of a"<<endl;
  cin>>a;
  cout<<"enter value of b"<<endl;
  cin>>b;
  char ch;
  cout<<"choose operation to perform"<<endl;
  cin>>ch;
  
  switch(ch){
    case '+': cout<<a+b<<endl;
            break;
    case '-': cout<<a-b<<endl;
            break;
    case '*': cout<<a*b<<endl;
            break;
    case '/': if(b==0){
      cout<<"invalid input!";
    }else{
      cout<<a/b<<endl;
    }
            break;
    case '%': cout<<a%b<<endl;
            break;
    default:cout<<"choose correct operation!";
    }
  }
    
